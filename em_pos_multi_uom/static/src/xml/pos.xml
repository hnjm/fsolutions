<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="MulitUOMWidget" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup popup-textarea">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <main class="body" style="height: 270px;">
                        <div>
                            <t t-if="props.modifiers_list">
                                <t t-foreach='props.modifiers_list' t-as='wv_uom'>
                                    <div class="button" t-on-click="multi_uom_button" t-att-data-uom_id="wv_uom.multi_uom_id[0]" t-att-data-price="wv_uom.price"><t t-esc="env.pos.format_currency(wv_uom.price)"/>/<t t-esc="wv_uom.multi_uom_id[1]"/></div>
                                </t>
                            </t>
                        </div>
                    </main>
                    <footer class="footer">
                        <div class="button cancel" t-on-click="cancel">
                            <t t-esc="props.cancelText" />
                        </div>
                    </footer>
                </div>
            </Draggable>
        </div>
    </t>
    <t t-name="ChangeUOMButton" owl="1">
        <div class="control-button">
            <i class='fa fa-tag' /> Change UOM
        </div>
    </t>
</templates>
